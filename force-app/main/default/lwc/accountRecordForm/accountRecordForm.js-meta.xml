<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <description>Create, Edit and View Account Record using LDS Record Form</description>
    <masterLabel>Generic Record Handler</masterLabel>
    <targets>               <!--target can be used to define where this lwc will be used-->
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets='lightning__AppPage, lightning__HomePage'> <!-- To use 'objectApiName' and 'recordId' on 
                                'lightning__AppPage' and 'lightning__HomePage'-->
            <property name="objectApiName" type="String" datasource="Account, Contact, Opportunity" default="Account"></property>
            <!-- To use given datasource as picklist in Lightning Component Builder-->
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>